/* pages/user/user.wxss */

/* 头像 */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  /* padding: 20rpx 40rpx; */
  padding-top: 40rpx;
}
.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  margin: 20rpx;
  border-radius: 50%;

}
.userinfo-nickname {
  color: #fff;
}
.userimg{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.usermotto {
  margin-top: 200px;
}
.head_bg{
  width: 100%;
  height: 320rpx;
  background: #35BD64;
}
.user_bg{
  position: absolute;
  z-index: 0;
  width: 100%;
  height: 320rpx;
}
button[open-type="getUserInfo"]{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  padding: 0;
  border: 10rpx solid #eee;
}
button[open-type="getUserInfo"]:after{
  border: none;
}

.main{
  height: calc(100% - 100rpx);
  background: #f5f5f5;
}

.version{
  text-align: center;
  font-size: 28rpx;
  color: #999;
  line-height: 80rpx;
}
.weui-cells {
    margin-top: 1.17647059em;
    background-color: #FFFFFF;
    line-height: 1.41176471;
    font-size: 28rpx;
    overflow: hidden;
    position: relative;
}
.center{
  justify-content: center;
  color: #57bc65;
}
/* 打赏 */
.navigator-hover{
  background: none;
}
/* 客服 */
button[open-type="contact"]{
  background: #fff;
  font-size: 28rpx;
  border: none;
  text-align: left;
  margin: 0;
  padding: 0;
  line-height: 38rpx;
}
button[open-type="contact"]:after{
  border:none;
}
.weui-cells:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  border-top: 1px solid #D9D9D9;
  color: #D9D9D9;
  transform-origin: 0 0;
  transform: scaleY(0.5);
}
.weui-cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  border-bottom: 1px solid #D9D9D9;
  color: #D9D9D9;
  transform-origin: 0 100%;
  transform: scaleY(0.5);
}
.weui-cell {
  padding: 28rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.weui-cell:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  border-top: 1px solid #D9D9D9;
  color: #D9D9D9;
  transform-origin: 0 0;
  transform: scaleY(0.5);
  left: 15px;
}
.weui-cell:active {
  color: #666;
}
.weui-cell__bd{
  flex: 1;
}

.weui-cell__ft {
  text-align: right;
  color: #888;
}
.weui-cell .weui-cell__ft:after {
  content: " ";
  display: inline-block;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  height: 18rpx;
  width: 18rpx;
  border-width: 3rpx 3rpx 0 0;
  border-color: #C8C8CD;
  border-style: solid;
  position: relative;
  top: -4rpx;
  top: -2rpx;
  margin-left: .6rpx;
}