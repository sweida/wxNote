/* pages/list/list.wxss */
.noteList{
  padding: 30rpx 30rpx 0 0;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
  color: #333;
  position: relative;
  overflow: hidden;
  transition: left 0.2s ease-in-out;
  overflow:hidden;
  text-overflow:ellipsis;
}
.date{
  font-style: italic;
  font-size: 24rpx;
  color: #bbb;
  line-height: 64rpx;
}
.leftbox{
  position: relative;
  overflow: hidden;
}
.delete{
  background: red;
  color: #fff;
  position: absolute;
  top:0;
  right: -100px;
  /* left: 100%; */
  transition: left 0.2s ease-in-out;
  width: 180rpx;
  height: 100%;
  z-index: 1000;
}